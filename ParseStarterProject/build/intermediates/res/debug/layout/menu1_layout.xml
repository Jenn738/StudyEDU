<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Class ID"
        android:id="@+id/textView2"
        android:padding="5dp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"
            android:layout_weight="1"
            android:entries="@array/departments"
            android:prompt="@string/select"
            android:spinnerMode="dropdown"
            android:gravity="center"
            style="?android:attr/spinnerItemStyle"
            android:paddingLeft="80dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your class Number"
        android:id="@+id/textView3"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"

        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_weight="1"
            style="?android:attr/spinnerItemStyle"

            android:layout_alignParentTop="true"
            android:entries="@array/courses"
            android:prompt="@string/select2"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown"
        android:paddingLeft="80dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"

           />



    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label"
        android:gravity="center"
        android:layout_gravity="center" />

</LinearLayout><!-- From: file:/Users/jenniferjain/Downloads/VersionAug2/VersionA/ParseStarterProject/res/layout/menu1_layout.xml -->